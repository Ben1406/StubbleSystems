<frmwrk:MainWindowBase x:Class="FortisTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FortisTest"
        xmlns:frmwrk="clr-namespace:FortisFramework;assembly=FortisFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{Binding Theme.BackgroundColor}">
    <Grid>
        <Button Content="Test" HorizontalAlignment="Left" Margin="49,30,0,0" VerticalAlignment="Top" Click="ButtonTest_Click"/>
        <Label Name="LblLog1" Content="..." HorizontalAlignment="Left" Margin="49,55,0,0" VerticalAlignment="Top" Height="34" Width="456" BorderThickness="1" BorderBrush="{Binding Theme.BorderColor}" Background="{Binding Theme.BackgroundColor}" Foreground="{Binding Theme.ForegroundColor}"/>
        <Label Name="LblLog2" Content="..." HorizontalAlignment="Left" Margin="49,94,0,0" VerticalAlignment="Top" Height="35" Width="456" BorderThickness="1" BorderBrush="{Binding Theme.BorderColor}" Background="{Binding Theme.BackgroundColor}" Foreground="{Binding Theme.ForegroundColor}"/>
        <Button Content="Weight" HorizontalAlignment="Left" Margin="49,0,0,0" VerticalAlignment="Center" Click="ButtonWeight_Click"/>
        <Label x:Name="LblScaleWeight" Content="..." HorizontalAlignment="Left" Margin="49,232,0,0" VerticalAlignment="Top" Height="35" Width="456" BorderThickness="1" BorderBrush="{Binding Theme.BorderColor}" Background="{Binding Theme.BackgroundColor}" Foreground="{Binding Theme.ForegroundColor}"/>
        <Label x:Name="LblBarcodeScanner" Content="..." HorizontalAlignment="Left" Margin="49,272,0,0" VerticalAlignment="Top" Height="35" Width="456" BorderThickness="1" BorderBrush="{Binding Theme.BorderColor}" Background="{Binding Theme.BackgroundColor}" Foreground="{Binding Theme.ForegroundColor}"/>

    </Grid>
</frmwrk:MainWindowBase>
